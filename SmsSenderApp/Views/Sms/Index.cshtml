<style>
    body {
        background-color: #f4f6f9;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    .sms-container {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .sms-card {
        background: #ffffff;
        padding: 35px 45px;
        border-radius: 14px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.1);
        width: 420px;
        text-align: center;
    }

        .sms-card h2 {
            margin-bottom: 25px;
            color: #333;
        }

    .form-group {
        margin-bottom: 18px;
        text-align: left;
    }

    label {
        font-weight: 600;
        margin-bottom: 6px;
        display: block;
        color: #444;
    }

    input, textarea {
        width: 100%;
        padding: 11px;
        border-radius: 6px;
        border: 1px solid #ccc;
        font-size: 14px;
    }

    textarea {
        height: 100px;
        resize: none;
    }

    button {
        width: 100%;
        padding: 12px;
        background-color: #007bff;
        border: none;
        color: white;
        font-size: 16px;
        border-radius: 6px;
        cursor: pointer;
        margin-top: 10px;
    }

        button:hover {
            background-color: #0056b3;
        }

    .success-msg {
        margin-top: 15px;
        color: green;
        font-weight: bold;
    }

    .error-msg {
        margin-top: 15px;
        color: red;
        font-weight: bold;
    }

    /* Footer */
    .footer {
        margin-top: 25px;
        text-align: center;
        font-size: 16px;
        color: #444;
        font-weight: 500;
    }

        .footer img {
            height: 55px;
            display: block;
            margin: 8px auto 0;
        }
</style>

<div class="sms-container">
    <div class="sms-card">

        <h2>Send SMS Via .Net</h2>

        <form method="post">

            <div class="form-group">
                <label>Mobile Number</label>
                <input type="text" name="mobileNumber" placeholder="Enter mobile number" />
            </div>

            <div class="form-group">
                <label>Message</label>
                <textarea name="message" placeholder="Type your message"></textarea>
            </div>

            <button type="submit">Send SMS</button>

        </form>

        @if (ViewBag.Success != null)
        {
            <p class="success-msg">@ViewBag.Success</p>
        }

        @if (ViewBag.Error != null)
        {
            <p class="error-msg">@ViewBag.Error</p>
        }

        <!-- Footer -->
        @* <div class="footer">
            <div>Implemented by MHL</div>
            <img src="/images/mhl-logo.webp" alt="MHL Logo" />
        </div> *@

    </div>
</div>